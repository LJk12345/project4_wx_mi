.page-container {
  width: 100%;
  height: 100%;
  background-color: #F4F4F4;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.page-header {
  flex-shrink: 0;
}

.page-content {
  width: 98%;
  flex-grow: 1;
  overflow: auto;
  margin: 0 auto;
}

.page-header_top {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.page-header_top i{
  width: 78rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.page-header_lable {
  width: 100%;
  display: flex;
  align-items: center;
}

.page-header_lable view{
  text-align: center;
  width: 33.333333%;
  padding: 20rpx 0;
  font-size: 26rpx;
}


.page-header_lable view text.select {
  background-color: #DFB456;
  box-sizing: border-box;
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
  color: white;
}

.empty_list {
  padding: 80rpx 0;
  text-align: center;
  background-color: rgba(255, 255, 255, 0);
}

.empty_list image {
  width:180rpx;
  height: 180rpx;
}

.empty_list view{
  padding-top: 26rpx;
  font-size: 26rpx;
}

/* 内容容器 */
.order_list_box {
  width: 97%;
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 0 auto 20rpx auto;
}

.order_list_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order_list_top image {
  width:48rpx;
  height: 48rpx;
  vertical-align: middle;
}

.order_list_top .list_title {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 14rpx;
  vertical-align: middle;
}

.top_right {
  font-size: 28rpx;
}

.product_box navigator{
  margin: 40rpx 0;
  display: flex;
}

.product_box navigator image{
  width: 172rpx;
  height: 172rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  border-radius: 10rpx;
  background-color: #F4F4F4;
}

.product_box_right{
  display: flex;
  flex-grow: 1;
}

.product_box_right .name{
  width: 80%;
  font-size: 30rpx;
}

.product_box_right .unitPrice_num {
  flex-grow: 1;
  text-align: right;
  font-size: 26rpx;
  color: #999;
}

