.order_list_footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order_list_footer .timer{
  font-size:24rpx;
  color: #bf1111;
}

.order_list_footer .delBtn{
  font-size: 28rpx;
  color: #999;
}

.order_list_footer view{
  border-radius: 40rpx;
  text-align: center;
  border: 2rpx solid #bf1111;
  color: #bf1111;
  font-size: 28rpx;
  width: 28% ;
  background-color: white;
}