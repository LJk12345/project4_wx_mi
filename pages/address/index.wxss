/* pages/address/index.wxss */

.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.page-content{
  display: flex;
  flex-grow: 1;
  background-color: #F4F4F4;
  justify-content: center;
  overflow: auto;
}

.addressEmpty{
  align-self: center;
  width: 100%;
  text-align: center;
}

.addressEmpty image {
  width: 154rpx;
  height: 154rpx;
}

.addressEmpty view{
  font-size: 24rpx;
  color: #666;
  padding-top: 22rpx;
}

.address{
  width: 100%;
  overflow: auto;
  background-color: white;
}

.address button{
  font-size: 12px;
  height: 15%;
  width:120rpx;
  margin-right: 20rpx;
}

.address_box {
  height: 15%;
  padding: 20px;
  border-bottom: 1px solid #F4F4F4;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address_list {
  width: 90%;
}

.address image{
  width: 17px;
  height: 17px;
}

.address-receive {
  font-size: 15px;
  color: #333;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
}

.address-message{
  font-size: 12px;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address_list i{
  height: 10%;
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #b60906;
  padding: 0 10rpx;
  border: 2rpx solid #b60906;
}

.address-message text{
  background-color: #F4F4F4;
  text-align: center;
  font-weight: bolder;
  font-size: 24rpx;
  padding: 10rpx;
  border-radius: 10rpx;
}
.address-message text:active{
  background-color:#c7c7c7;
 
}

.address-message view{
  width: 80%;
}

.page-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  padding: 20px;

}

.page-footer text{
  display: block;
  width: 100%;
  padding: 8px 0;
  text-align: center;
  border-radius: 10px;
  border: 1px solid rgb(132, 95, 63);
  color: #845f3f;
  font-size: 14px;
}